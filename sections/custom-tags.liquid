<h4 class="custom-tag">{{ section.settings.tag-name }}</h4>

{% stylesheet %}
.custom-tag {
  background-color: {{ section.settings.tag-background-color }};
  color: {{ section.settings.tag-text-color }};
}
{% endstylesheet %}

{% schema %}
  {
    "name": "Custom tags",
    "settings": [
      {
        "type": "text",
        "id": "tag-name",
        "label": "Tag name"
      },
      {
        "type": "color",
        "id": "tag-background-color",
        "label": "Background color"
      },
      {
        "type": "color",
        "id": "tag-text-color",
        "label": "Text color"
      },
      {
        "type": "select",
        "id": "tag-position",
        "options": [
          {
            "value": "bottom left",
            "label": "t:settings_schema.badges.settings.position.options__1.label"
          },
          {
            "value": "bottom right",
            "label": "t:settings_schema.badges.settings.position.options__2.label"
          },
          {
            "value": "top left",
            "label": "t:settings_schema.badges.settings.position.options__3.label"
          },
          {
            "value": "top right",
            "label": "t:settings_schema.badges.settings.position.options__4.label"
          }
        ],
        "default": "bottom left",
        "label": "t:settings_schema.badges.settings.position.label"
      }
      
    ],
    "presets": [{"name": "Custom tag section"}]
  }
{% endschema %}